---
import Header from '../components/Header.astro';
import '../styles/global.css';
const { frontmatter, title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link
			rel="icon"
			type="image/svg+xml"
			href="/favicon.svg"
		/>
		<meta
			name="viewport"
			content="width=device-width"
		/>
		<meta
			name="generator"
			content={Astro.generator}
		/>
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<div class="container">
			<slot />
		</div>
		<script>
			import '../scripts/menu.js';
		</script>
	</body>
</html>
