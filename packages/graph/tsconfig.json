{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"module": "ESNext",
		"lib": ["ESNext", "DOM"],
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": ".",
		"moduleResolution": "Node",
		"target": "ESNext",
		"useDefineForClassFields": true,
		"strict": true,
		"composite": true,
		"sourceMap": true,
		"declaration": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"noEmit": false,
		"skipLibCheck": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"paths": {
			"@redeye/ui-styles": ["../ui-styles/src/index.ts"],
			"@redeye/ui-styles/*": ["../ui-styles/src/*"]
		}
	},
	"files": [],
	"include": ["src/**/*"],
	"references": [
		{
			"path": "../ui-styles"
		}
	]
}
